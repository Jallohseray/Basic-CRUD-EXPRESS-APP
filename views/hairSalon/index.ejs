<% layout('layouts/bootstrap')%>

<h1>All Hair Salon</h1>
<div>
 
</div>
<% for (let hair of hairs ){%>
<div class="card" mb-3>
    <div class="row">
        <div class="col-md-4">
            <img class="img-fluid" alt="" src="<%=hair.image%>">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= hair.title %> </h5>
                <p class="card-text"><%= hair.description %></p>
                <p class="card-text">
                    <small class="text-muted"><%= hair.location%></small>
                </p>
                <a class="btn btn-primary" href="/hairsalone/<%=hair._id%>">View <%=hair.title%></a>
            </div>
        </div>
    </div>
</div>
<% }%>